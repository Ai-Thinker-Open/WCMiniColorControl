<view class="color-picker-view">
  <canvas id="colorPicker" style="width: {{raduis}}rpx;height: {{raduis}}rpx;" canvas-id="colorPicker" class="color-picker" />
  <canvas canvas-id="colorPickerSlider" class="color-picker-slider" style="width: {{raduis}}rpx;height: {{raduis}}rpx;z-index:1;background:rgba(255,255,255,0);" bindtouchstart="onSlide" bindtouchmove="onSlide" bindtouchend="onSlide" />
</view>


<text style="font-size:29rpx">采集结果：{{pickColor}}</text>
<button bindtap="onClickSync" class="weui-btn" type="primary" style="top:0.5px;">同步最新状态</button>
<button bindtap="onClickRedColor" class="weui-btn" type="primary" style="top:4.5px;">指定颜色为红色</button>
<button bindtap="onClickGreenColor" class="weui-btn" type="primary" style="top:0.5px;">指定颜色为绿色</button>
<button bindtap="onClickBlueColor" class="weui-btn" type="primary" style="top:0.5px;">指定颜色为蓝色</button>
<button bindtap="onClickOpen" class="weui-btn" type="primary" style="top:0.5px;">开灯</button>
<button bindtap="onClickOff" class="weui-btn" type="primary" style="top:0.5px;">关灯</button>

<view class="weui-footer weui-footer_fixed-bottom">
