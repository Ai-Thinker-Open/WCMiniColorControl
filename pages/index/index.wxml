<view class="color-picker-view">
  <canvas id="colorPicker" style="width: {{raduis}}rpx;height: {{raduis}}rpx;" canvas-id="colorPicker" class="color-picker" />
  <canvas canvas-id="colorPickerSlider" class="color-picker-slider" style="width: {{raduis}}rpx;height: {{raduis}}rpx;z-index:1;background:rgba(255,255,255,0);" bindtouchstart="onSlide" bindtouchmove="onSlide" bindtouchend="onSlide" />
</view>
<button bindtap="onClickQuery" class="weui-btn" type="primary" style="top:0.5px;">查询最新状态</button>
<button bindtap="onClickRedColor" class="weui-btn" type="primary" style="top:4.5px;">红色</button>
<button bindtap="onClickGreenColor" class="weui-btn" type="primary" style="top:0.5px;">绿色</button>
<button bindtap="onClickBlueColor" class="weui-btn" type="primary" style="top:0.5px;">蓝色</button>
<button bindtap="onClickOn" class="weui-btn" type="primary" style="top:0.5px;">开灯</button>
<button bindtap="onClickOff" class="weui-btn" type="primary" style="top:0.5px;">关灯</button>
